<% if user_signed_in? %>
    <%= button_to '編集', {controller: "lenses", action: "edit"}, {method: :get, class: :"button is-primary"} %>
    <%= button_to '削除', @lens, :method => :delete, class: :"button is-danger" %>
<% end %>

<div class="lens-name">
    <h1 class="title"><%= @lens.name %></h1>
</div>

<div class="main_img">
    <div class="card">
        <%= image_tag "/images/lens/#{@lens.kakakucom_id}.jpg" %>
    </div>
</div>

<!-- tag list -->
<div class="tag-form">
    <% @lens_tags.each do |tag| %>
        <label class="tag is-info is-medium"><%= tag.name %></label>
    <% end %>
</div>

<div class="lens-detail">
<table class="table is-narrow is-fullwidth is-striped">
    <tr>
        <th>メーカー</th>
        <td><%= @lens.maker %></td>
    </tr>
    <tr>
        <th>名称</th>
        <td><%= @lens.name %></td>
    </tr>
    <!--
    <tr>
        <th>型番</th>
        <td><%= @lens.model_number %></td>
    </tr>
    -->
    <!--
    <tr>
        <th>レンズマウント</th>
        <td><%= @lens.mount %></td>
    </tr>
    -->
    <tr>
        <th>焦点距離(mm)</th>
        <td><%= @lens.focal_length %></td>
    </tr>
    <tr>
        <th>絞り</th>
        <td><%= @lens.aperture %></td>
    </tr>
    <tr>
        <th>絞り羽根枚数</th>
        <td><%= @lens.number_of_aperture_blades %>枚</td>
    </tr>
    <tr>
        <th>画角</th>
        <td><%= @lens.angle_of_view %></td>
    </tr>
    <tr>
        <th>最短撮影距離</th>
        <td><%= @lens.minimum_shooting_distance %></td>
    </tr>
    <tr>
        <th>レンズ構成（群-枚）</th>
        <td><%= @lens.lens_construction %></td>
    </tr>
    <tr>
        <th>最大撮影倍率（倍）</th>
        <td><%= @lens.maximum_magnification %></td>
    </tr>
    <tr>
        <th>フィルター径</th>
        <td><%= @lens.filter_diameter %></td>
    </tr>
    <tr>
        <th>レンズ内手振れ補正</th>
        <td><%= @lens.stabilization ? "対応" : "非対応" %></td>
    </tr>
    <tr>
        <th>テレコンバーター(1.4x)</th>
        <td><%= @lens.teleconverter_14x ? "対応" : "非対応" %></td>
    </tr>
    <tr>
        <th>テレコンバーター(2.0x)</th>
        <td><%= @lens.teleconverter_20x ? "対応" : "非対応" %></td>
    </tr>
    <tr>
        <th>寸法</th>
        <td><%= @lens.dimensions %></td>
    </tr>
    <tr>
        <th>質量</th>
        <td><%= @lens.weight %></td>
    </tr>
    <tr>
        <th>対応センサーサイズ</th>
        <td>
            <%if @lens.support_FF %>
                35mmフルサイズ
            <% elsif @lens.support_APSC %>
                APS-C
            <% end %>
        </td>
    </tr>
    <tr>
        <th>対応センサーサイズ</th>
        <td>
            <%if @lens.sensor_size == "FF" %>
                35mmフルサイズ
            <% elsif @lens.sensor_size == "APS-C" %>
                APS-C
            <% elsif @lens.sensor_size == "M4/3" %>
                マイクロフォーサーズ
            <% elsif @lens.sensor_size == "1inch" %>
                １型
            <% end %>
        </td>
    </tr>
</table>
</div>
<% if user_signed_in? %>
    <%= link_to "new", new_lens_path, class: :"button is-primary"%>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: :"button is-primary"%>
<% else %>
    <%= link_to "Login", new_user_session_path, class: :"button is-primary"%>
<% end %>

